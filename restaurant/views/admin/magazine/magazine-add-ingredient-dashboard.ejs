<%- include('../../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../../includes/navigation.ejs') %>
    <h1>Add magazine Ingredient dashboard</h1>
    <h1><a href="/admin/magazine-add-ingredient-template">Add new ingredient template</a></h1>
    <main>
        <% if (ingredients.length> 0) { %>
            <div class="grid">
                <ul class="roomsList">
                    <% for (let ingredient of ingredients) { %>
                        <li>
                            <div class="left">
                                <h3>
                                    <%= ingredient.name %>
                                </h3>
                                <h5>
                                    <%= ingredient.category %>
                                </h5>
                            </div>
                            <div class="card__actions">
                                <a href="/admin/magazine-add-ingredient/ingredient/<%= ingredient._id %>" class="btn">Add</a>
                            </div>
                        </li>
                        <% } %>
                </ul>
            </div>
            <% } else { %>
                <h1>No Products Found!</h1>
                <% } %>
    </main>
</body>
</html>